{% from "macros/fields.tmpl" import render_input_field, render_password_field, render_checkbox_field, render_submit %}
{% extends "shared/layout.tmpl" %}

{% block title %}Přihlášení{% endblock %}

{% block content %}
  <div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
      <div class="card shadow-sm">
        <div class="card-body">
          <h3 class="card-title text-center mb-4">
            <i class="bi bi-box-arrow-in-right"></i> Přihlášení
          </h3>
          <form method="POST" id='login-form'>
            {{ form.hidden_tag() }}
            {{ render_input_field(form.email) }}
            {{ render_password_field(form.password) }}
            {{ render_checkbox_field(form.remember_me) }}
            {{ render_submit() }}
          </form>
          <hr>
          <div class="text-center">
            <a href="{{ url_for('auth.forgot_password') }}" class="text-decoration-none">
              <i class="bi bi-key"></i> Zapomněli jste heslo?
            </a>
          </div>
          <div class="text-center mt-3">
            <p class="text-muted">Nemáte účet?</p>
            <a href="{{ url_for('auth.register') }}" class="btn btn-outline-primary btn-sm">
              <i class="bi bi-person-plus"></i> Zaregistrovat se
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
{% endblock %}
